{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto merge container digests",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["digest"],
      matchPackagePrefixes: ["ghcr.io/onedr0p", "ghcr.io/bjw-s"],
      ignoreTests: true,
    },
    {
      description: "Auto merge KPS minors and patches",
      matchDatasources: ["helm"],
      automerge: true,
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["kube-prometheus-stack"],
      ignoreTests: false,
    },
    {
      description: "Auto merge all patches",
      automerge: true,
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      ignoreTests: false,
    },
    {
      description: "Never Automerge Cilium",
      matchDatasources: ["helm"],
      automerge: false,
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["cilium"],
      ignoreTests: false,
    },
    {
      description: "Never Automerge qbittorrent",
      matchDatasources: ["docker"],
      automerge: false,
      matchPackageNames: ["ghcr.io/home-operations/qbittorrent"],
      prBodyNotes: [
        ":warning: **Manual Review Required**: Check [qbittorrent changelog](https://github.com/qbittorrent/qBittorrent/blob/master/Changelog) and [libtorrent releases](https://github.com/arvidn/libtorrent/releases) for breaking changes before merging.",
      ],
    },
  ],
}
